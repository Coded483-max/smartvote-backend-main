{
  "name": "smartvote1-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "nodemon server.js",
    "dev": "nodemon server.js",
    "chain:compile": "cd blockchain && npx hardhat compile",
    "chain:deploy": "cd blockchain && npx hardhat run scripts/deploy.js --network sepolia",
    "chain:test": "cd blockchain && npx hardhat test",
    "test": "echo \"Error: no test specified\" && exit 1",
    "zkp:setup": "node scripts/setup-zkp.js",
    "zkp:compile": "circom circuits/vote.circom --r1cs --wasm --sym -o build/vote",
    "zkp:test": "node scripts/test-zkp.js",
    "build:circuits": "npm run zkp:compile && npm run zkp:setup",
    "zkp:verify": "node scripts/verify-zkp-setup.js",
    "zkp:complete-rebuild": "node scripts/complete-rebuild.js",
    "zkp:test-inputs": "node scripts/test-inputs.js",
    "zkp:debug-compile": "node scripts/debug-compile.js",
    "zkp:system": "node scripts/install-system-circom.js",
    "debug:circom": "node scripts/debug-circom.js",
    "zkp:powers-of-tau": "snarkjs powersoftau new bn128 12 build/pot12_0000.ptau -v && snarkjs powersoftau contribute build/pot12_0000.ptau build/pot12_0001.ptau --name=\"First contribution\" -v",
    "zkp:setup-keys": "snarkjs groth16 setup build/vote/vote.r1cs build/pot12_0001.ptau build/vote/vote_0000.zkey && snarkjs zkey contribute build/vote/vote_0000.zkey build/vote/vote_0001.zkey --name=\"First contribution\" -v && snarkjs zkey export verificationkey build/vote/vote_0001.zkey build/vote/verification_key.json",
    "zkp:test-proof": "node scripts/test-proof.js",
    "zkp:complete-setup": "npm run zkp:compile && npm run zkp:powers-of-tau && npm run zkp:setup-keys && npm run zkp:test-proof"
  },
  "keywords": [],
